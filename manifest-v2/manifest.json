{
  "manifest_version": 2,
  "name": "Thumbnail Rating Bar for YouTube™",
  "version": "1.9.6",
  "description": "Displays a rating bar (likes/dislikes) on the bottom of every YouTube™ video thumbnail.",
  "author": "Elliot Waite",
  "icons": {
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon96.png",
    "default_title": "Settings",
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.youtubekids.com/*"
      ],
      "exclude_matches": [
        "*://music.youtube.com/*",
        "*://studio.youtube.com/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.youtube.com/*",
    "*://*.youtubekids.com/*",
    "*://*.returnyoutubedislikeapi.com/*",
    "storage"
  ],
  "web_accessible_resources": [
    "css/bar-bottom-separator.css",
    "css/bar-bottom-tooltip.css",
    "css/bar-bottom.css",
    "css/bar-tooltip.css",
    "css/bar-top-separator.css",
    "css/bar-top-tooltip.css",
    "css/bar-top.css",
    "css/bar-video-page.css",
    "css/bar.css",
    "css/text-percentage.css"
  ]
}
